      "/" : {
        "get" : {
          "description" : "Retuns a list of available courses",
          "operationId" : "getCourses",
          "produces" : [ "application/json" ],
          "parameters" : [ ],
          "responses" : {
            "200" : {
              "description" : "successful request",
              "schema" : {
                "$ref" : "#/definitions/CourseList"
              }
            }
          }
        }
      },
      "/{semester}/" : {
        "get" : {
          "description" : "Can obtain all the course details of a specified semester",
          "operationId" : "getCourseDeatilsBySemester",
          "produces" : [ "application/json" ],
          "parameters" : [ {
            "name" : "semester",
            "in" : "path",
            "description" : "Semester (1, 2, 3, 4, 5, 6, 7, 8, general, technical, short-semester)",
            "required" : true,
            "type" : "string"
          } ],
          "responses" : {
            "200" : {
              "description" : "successful request",
              "schema" : {
                "$ref" : "#/definitions/CourseList"
              }
            },
            "404" : {
              "description" : "Invalid Semester"
            }
          }
        }
      },
      "/{semester}/{courseCode}/" : {
        "get" : {
          "summary" : "Course details",
          "description" : "Can obtain the details of a specific course by using this API",
          "operationId" : "getCourseByCode",
          "produces" : [ "application/json" ],
          "parameters" : [ {
            "name" : "semester",
            "in" : "path",
            "description" : "Semester (1, 2, 3, 4, 5, 6, 7, 8, general, technical, short-semester)",
            "required" : true,
            "type" : "string"
          } , {
            "name" : "courseCode",
            "in" : "path",
            "description" : "Course Code",
            "required" : true,
            "type" : "string"
          } ],
          "responses" : {
            "200" : {
              "description" : "successful request",
              "schema" : {
                "$ref" : "#/definitions/Course"
              }
            },
            "404" : {
              "description" : "Invalid Course Code"
            }
          }
        }
      }
